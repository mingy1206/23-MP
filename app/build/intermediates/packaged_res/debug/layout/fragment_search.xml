<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/searchKeyword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Search Album..." />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Now" />

        <Button
            android:id="@+id/searchImageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by Random image ID" />

        <ImageView
            android:id="@+id/searchResultImage"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        
        <TextView
            android:id="@+id/searchResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Title" />

        <TextView
            android:id="@+id/searchResultAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Author" />

        <TextView
            android:id="@+id/searchResultId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ID" />

    </LinearLayout>

</FrameLayout>