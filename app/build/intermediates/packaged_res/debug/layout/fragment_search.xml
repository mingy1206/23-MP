<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/go_to_random1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Search"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/go_to_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Search"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/change">

            <EditText
                android:id="@+id/searchKeyword"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="Search Album..."
                android:layout_weight="1" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search" />
        </LinearLayout>


        <ImageView
            android:id="@+id/searchResultImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/search_bar"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/saveButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:layout_below="@id/searchResultImage"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/searchResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Title"
            android:layout_below="@id/saveButton1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/searchResultAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Author"
            android:layout_below="@id/searchResultTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/searchResultId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ID"
            android:layout_below="@id/searchResultAuthor"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
