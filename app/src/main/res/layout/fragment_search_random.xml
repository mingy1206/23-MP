<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/change2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <Button
                android:id="@+id/go_to_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:text="Title Search"
                android:gravity="left"
                android:background="@drawable/rounded_corner"
                android:layout_weight="1"
                android:drawableLeft="@drawable/login_btn2"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/go_to_random2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:background="@drawable/rounded_corner"
                android:gravity="left"
                android:text="Random Search"
                android:drawableLeft="@drawable/random_search"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@id/change2">


        </LinearLayout>


        <ImageView
            android:id="@+id/searchResultImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/search_bar"
            android:src="@drawable/noimageicon"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/randomTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Shake your phone results Random Album!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_below="@id/searchResultImage"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/saveButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:layout_below="@id/randomTooltip"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</FrameLayout>
